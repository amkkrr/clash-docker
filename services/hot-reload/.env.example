# Hot Reload Service Environment Configuration

# Service Configuration
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# Docker Configuration
COMPOSE_PROJECT_NAME=clash-docker

# File Watching Configuration
CONFIG_BASE_PATH=/app/config
WATCH_PATHS=.env,config.yaml,rules/,templates/
DEBOUNCE_TIME=2000

# Restart Strategy Configuration
RESTART_STRATEGY=selective
MAX_RESTART_TIME=60000
HEALTH_CHECK_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=*

# WebSocket Configuration
WEBSOCKET_PATH=/ws/config-status

# Service Dependencies (comma-separated)
SERVICE_DEPENDENCIES_CLASH=nginx,web-ui
SERVICE_DEPENDENCIES_NGINX=web-ui
SERVICE_DEPENDENCIES_WEB_UI=
SERVICE_DEPENDENCIES_CONFIG_WATCHER=